@model BookingHistoryItemContainer
<!--Import JQuery-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<h1>Booking historik</h1>

<form asp-controller="OrderHistory" asp-action="Index" method="get">
    <button type="submit" class="btn btn-primary">Tilbage</button>
</form>

<table class="table" id="BookingHistoryTable">
    <thead>
        <tr>
            <th>
                Booking Id
            </th>
            <th>
                Noter
            </th>
            <th>
                Start tidspunkt
            </th>
            <th>
                Slut tidspunkt
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BookingItems) {
            <tr>
                <td>
                    @Html.DisplayFor(i => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(i => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(i => item.TimeStart)
                </td>
                <td>
                    @Html.DisplayFor(i => item.TimeEnd)
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        // function to update table content asynchronously
        function updateTable() {
            $.ajax({
                url: '/OrderHistory/GetOrdersByPhone',
                method: 'GET',
                datatype: 'json',
                data: { phone: localStorage.getItem("userPhone")},
                success: function (result) {
                    //Uses formattet html from backend
                    $('#BookingHistoryTable tbody').html(result);
                    //Generates html on frontend (More complicated)
                    //generateTable(result);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        }

        //call method uppon document ready
        updateTable();

        //update every 10 seconds
        setInterval(updateTable, 10000);
    });

    //This function generates html to display.
    //It has not styling or formatting.
    function generateTable(jsonData) {
        $('#BookingHistoryTable').empty();
        
        //create headers
        const headers = Object.keys(jsonData[0]);
        const headerRow = $('<tr></tr>');
        headers.forEach(headerText => {
            const th = $('<th></th>').text(headerText);
            headerRow.append(th);
        });
        //append headers
        $('#BookingHistoryTable').append(headerRow);

        //populate table
        jsonData.forEach(dataItem => {
            const row = $('<tr></tr>');
            Object.values(dataItem).forEach(value => {
                const cell = $('<td></td>').text(value);
                row.append(cell);
            });
            $('#BookingHistoryTable').append(row);
        });
    }
</script>
