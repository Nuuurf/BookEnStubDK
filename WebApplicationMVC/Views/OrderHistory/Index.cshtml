@model int?

<!--Import JQuery-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tidsbooking</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container mt-4 pb-3 mb-5 border-1">
        <h2 class="mb-4">Bookinger</h2>
        <h3 class="mb-4">For at se dine bookinger, oplys telefon-nummer</h3>
        <form asp-controller="OrderHistory" asp-action="BookingHistory" method="post" class="form-container mt-4 p-4 border">
            <div class="form-group mb-3">
                <input type="text" class="form-control" id="inputValue" name="inputValue" placeholder="Ex: 88 88 88 88" required>
            </div>
            <button type="submit" class="btn btn-primary" id="submitButton">Submit</button>
        </form>
    </div>
</body>
</html>

<script>
    $('#submitButton').on('click', function () {
        localStorage.setItem("userPhone", $('#inputValue').val());
    });
</script>