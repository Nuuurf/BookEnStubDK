@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Tidsbooking</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Font Awesome Icons -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    </head>
    <body>
        <div class="container mt-4 pb-3 mb-5">
            <h2 class="mb-4">Bekræft Booking</h2>
            <div class="row">
                <!-- Booking Times Card -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <h5 class="mb-0 mr-5 pr-5">Tid(er) Reserveret</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group" id="booked-times">
                                <!-- Time slots will be added dynamically here -->
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Booking Information Card -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <h5 class="mb-0">Booking oplysninger</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                <!-- Full Name -->
                                <div class="mb-3">
                                    <label for="fullName" class="form-label">Fulde Navn</label>
                                    <input type="text" class="form-control" id="fullName" placeholder="Ex: Lars Larsen">
                                </div>

                                <!-- Email -->
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" placeholder="Ex: lars@email.dk">
                                </div>

                                <!-- Phone Number -->
                                <div class="mb-3">
                                    <label for="phoneNumber" class="form-label">Telefonnummer</label>
                                    <input type="tel" class="form-control" id="phoneNumber" placeholder="Ex: +45 88 88 88 88">
                                </div>

                                <!-- Notes -->
                                <div class="mb-3">
                                    <label for="notes" class="form-label">Kommentar</label>
                                    <input type="text" class="form-control" id="notes" placeholder="Ex: Fødselsdag, kan vi få flag?">
                                </div>

                                <!-- Submit Button -->
                                <button type="button" class="btn btn-success btn-book-confirm">Bekræft Booking </button>
                                <p class="text-danger font-italic text-center" id="errorTextBox"></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Bootstrap JS (optional, for certain Bootstrap features) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <!-- jQuery (required for Bootstrap JavaScript plugins) -->
        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

        <!-- JQuery and javascript code for page functionality is below here -->
        <!-- Rest of the script code is in this file, is under wwwroot/js/filename.js -->
        <script src="~/js/ConfirmPage.js"></script>

        <script>
            $(document).ready(function () {
                $('.btn-book-confirm').on('click', function () {
                    // Retrieve data from local storage
                    var selectedAppointments = localStorage.getItem('selectedAppointments');

                    if (selectedAppointments) {
                        // Parse the stored string back into an object
                        var appointments = JSON.parse(selectedAppointments);

                        // Extract only the datetime values from the appointments
                        var datetimeValues = appointments.map(function (appointment) {
                            return appointment.datetime; 
                        });

                        // Prepare the JSON object for the POST request
                        var postData = JSON.stringify(datetimeValues);
                        loadingButtonIcon(true);

                        // Make the POST request
                        $.ajax({
                            url: '@Url.Action("BookAppointment", "Booking")',
                            type: 'POST',
                            contentType: 'application/json',
                            data: postData,
                            success: function (response) {
                                // Handle success
                                var id = response.id;
                                showBookingConfirmation(id);
                                console.log('Booking confirmed, ID:', id);
                            },
                            error: function (xhr, status, error) {
                                // Handle error
                                var errorMessage = JSON.parse(xhr.responseText).error;
                                console.log(errorMessage);
                                $('#errorTextBox').text(errorMessage);
                                loadingButtonIcon(false);
                            }
                        });
                    } else {
                        console.log('No appointments found in local storage');
                    }
                });
            });

            function loadingButtonIcon(enabled) {
                if (enabled) {
                    $('.btn-book-confirm').append('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>');
                } else {
                    $('.btn-book-confirm').find('span.spinner-border').remove();
                }
            }

            function showBookingConfirmation(id) {
                // Create a confirmation modal using Bootstrap classes
                var confirmationModal = `
                                                        <div class="container mt-5">
                                                            <div class="row justify-content-center">
                                                                <div class="col-md-6">
                                                                    <div class="card">
                                                                        <div class="card-header">
                                                                            <h5 class="mb-0">Booking Information</h5>
                                                                        </div>
                                                                        <div class="card-body">
                                                                            <div class="text-center">
                                                                                <div class="icon-box">
                                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                                                                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                                                                                    </svg>
                                                                                </div>
                                                                                <h4 class="mt-4">Booking Bekræftet!</h4>
                                                                                <p>Din reservation er blevet bekræftet.</p>
                                                                                <p>Dit Booking-ID er: ` + id + `</p>
                                                                                <a href="/Booking/Index" class="btn btn-success">Gå Tilbage</a>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>`;

                // Replace the entire body with the modal content
                $('body').html(confirmationModal);
            }
        </script>
    </body>
    </html>
}
